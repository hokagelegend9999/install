#!/bin/bash

# ==============================================
# VPN CONTAINER INSTALLER - ULTIMATE FIX
# ==============================================

CONTAINER_NAME="vpn-container"
CONTAINER_IMAGE="ubuntu:20.04"
LXD_CHANNEL="latest/stable"

# Fungsi untuk menampilkan pesan
function show_msg() {
    echo -e "\033[1;36m>>> $1\033[0m"
}

function show_error() {
    echo -e "\033[1;31m!!! $1\033[0m"
}

function show_success() {
    echo -e "\033[1;32mâœ“ $1\033[0m"
}

# 1. Clean up existing installation
function cleanup() {
    show_msg "Membersihkan instalasi sebelumnya..."
    
    # Stop and remove container
    if lxc list --format csv | grep -q "^$CONTAINER_NAME,"; then
        lxc stop $CONTAINER_NAME --force 2>/dev/null
        lxc delete $CONTAINER_NAME --force 2>/dev/null
    fi
    
    # Remove LXD
    sudo snap remove --purge lxd 2>/dev/null
    sudo apt remove --purge lxd lxd-client 2>/dev/null
    
    # Clean directories
    sudo rm -rf /var/snap/lxd
    sudo rm -rf /var/lib/lxd
    sudo rm -rf /var/cache/lxd
    sudo rm -rf ~/.config/lxc
}

# 2. System preparation
function system_prep() {
    show_msg "Mempersiapkan sistem..."
    
    # Update system
    sudo apt update
    sudo apt upgrade -y
    
    # Install required packages
    sudo apt install -y snapd zfsutils-linux bridge-utils
    
    # Enable snapd
    sudo systemctl enable --now snapd.socket
    
    # Add snap to PATH
    export PATH=$PATH:/snap/bin
    echo 'export PATH=$PATH:/snap/bin' >> ~/.bashrc
    source ~/.bashrc
}

# 3. Install and configure LXD
function install_lxd() {
    show_msg "Menginstal LXD..."
    
    # Install LXD
    sudo snap install lxd --channel=$LXD_CHANNEL
    
    # Wait for installation
    sleep 5
    
    # Add user to lxd group
    sudo usermod -aG lxd $USER
    newgrp lxd
    
    # Initialize LXD with proper storage
    show_msg "Menginisialisasi LXD..."
    cat <<EOF | lxd init --preseed
config:
  core.https_address: '[::]:8443'
  core.trust_password: ""
  images.auto_update_interval: 24
storage_pools:
- name: default
  driver: dir
  config:
    source: /var/lib/lxd/storage-pools/default
networks:
- name: lxdbr0
  type: bridge
  config:
    ipv4.address: auto
    ipv6.address: none
profiles:
- name: default
  devices:
    root:
      path: /
      pool: default
      type: disk
    eth0:
      name: eth0
      network: lxdbr0
      type: nic
EOF
}

# 4. Create container with proper storage
function create_container() {
    show_msg "Membuat container $CONTAINER_NAME..."
    
    # Create storage pool if not exists
    if ! lxc storage list --format csv | grep -q "^default,"; then
        lxc storage create default dir source=/var/lib/lxd/storage-pools/default
    fi
    
    # Create container with explicit storage
    lxc init $CONTAINER_IMAGE $CONTAINER_NAME -c security.nesting=true -c security.privileged=true
    
    # Manually attach root disk
    lxc config device add $CONTAINER_NAME root disk path=/ pool=default
    
    # Configure resources
    lxc config set $CONTAINER_NAME limits.memory 2GB
    lxc config set $CONTAINER_NAME limits.cpu 2
    
    # Start container
    lxc start $CONTAINER_NAME
    
    # Wait for container to be ready
    show_msg "Menunggu container siap..."
    sleep 15
    lxc exec $CONTAINER_NAME -- cloud-init status --wait
}

# 5. Create access menu
function create_menu() {
    show_msg "Membuat menu akses..."
    
    # Create menu script
    sudo tee /usr/local/bin/vpn-menu > /dev/null <<'EOL'
#!/bin/bash

CONTAINER_NAME="vpn-container"

# Fix permission issues
unset XDG_RUNTIME_DIR

# Check if container exists
if ! lxc list --format csv | grep -q "^$CONTAINER_NAME,"; then
    echo "Membuat container baru..."
    sudo lxc init ubuntu:20.04 $CONTAINER_NAME -c security.nesting=true -c security.privileged=true
    sudo lxc config device add $CONTAINER_NAME root disk path=/ pool=default
    sudo lxc start $CONTAINER_NAME
    sleep 15
fi

# Start container if not running
if [ "$(lxc list -f csv | grep "^$CONTAINER_NAME," | cut -d, -f4)" != "RUNNING" ]; then
    echo "Menjalankan container..."
    sudo lxc start $CONTAINER_NAME
    sleep 5
fi

echo "Memasuki container $CONTAINER_NAME..."
exec sudo lxc exec $CONTAINER_NAME -- bash
EOL

    sudo chmod +x /usr/local/bin/vpn-menu
    
    # Create alias
    if ! grep -q "alias menu=" ~/.bashrc; then
        echo "alias menu='vpn-menu'" >> ~/.bashrc
    fi
    
    source ~/.bashrc
}

# 6. Fix all permissions
function fix_permissions() {
    show_msg "Memperbaiki permission..."
    
    # Fix permission issues
    sudo chown -R $USER:$USER ~/.config/lxc
    sudo chmod -R 755 ~/.config/lxc
    
    # Rebuild group cache
    newgrp lxd
    sudo systemctl restart snap.lxd.daemon
}

# Main installation process
show_msg "Memulai instalasi lengkap..."

# Execute all steps
cleanup
system_prep
install_lxd
create_container
create_menu
fix_permissions

# Final verification
if lxc list --format csv | grep -q "^$CONTAINER_NAME,RUNNING"; then
    show_success "INSTALASI BERHASIL!"
    echo -e "\nGunakan perintah berikut:"
    echo -e "  \033[1;32mmenu\033[0m     - Untuk masuk ke container"
    echo -e "  \033[1;32mlxc list\033[0m - Untuk melihat container"
    echo -e "\nAnda sekarang bisa masuk ke container dengan mengetik 'menu'"
else
    show_error "Instalasi gagal. Coba langkah berikut:"
    echo "1. Jalankan: sudo lxc storage create default dir"
    echo "2. Kemudian: lxc init ubuntu:20.04 $CONTAINER_NAME"
    echo "3. Lalu jalankan script ini lagi"
    exit 1
fi
