#!/bin/bash

# Nama container
CONTAINER_NAME="legacy-script-env"

# Image Ubuntu yang akan digunakan
IMAGE="ubuntu:20.04"

echo "Membuat container LXC dengan nama: $CONTAINER_NAME menggunakan image $IMAGE"

# Membuat dan menjalankan container
lxc launch $IMAGE $CONTAINER_NAME

# Cek status container
echo "Cek status container..."
lxc list $CONTAINER_NAME

# Jika ingin masuk ke container langsung
echo "Masuk ke container $CONTAINER_NAME"
lxc exec $CONTAINER_NAME -- bash
